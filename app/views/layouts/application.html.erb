<!DOCTYPE html>
<html>
  <head>
    <title>CovidSafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div>
    <% if logged_in? %>
        ⎮<%= link_to "Home", root_path %>⎮
        ⎮<%= link_to "Add a New Place", new_establishment_path%>⎮
        ⎮<%= link_to "Add a Review", new_review_path%>⎮
        ⎮<%= link_to "Browse Reviews", reviews_path%>⎮
        ⎮<%= link_to "NYC Establishments", establishments_path%>⎮
        ⎮<%= link_to "My Reviews", user_path(current_user)%>⎮
    <% else %>
        ⎮<%= link_to "Home", root_path %>⎮
        ⎮<%= link_to "Browse Reviews", reviews_path%>⎮
        ⎮<%= link_to "NYC Establishments", establishments_path%>⎮
    <% end %>
    
  </div>

  <body>
    <%= yield %>
  </body>
</html>

<footer>
<br><br>
<% if logged_in? %>
  ⎮<%= link_to "Log Out", logout_path, method: :delete %>⎮
<% end %>
</footer>


